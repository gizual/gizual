{
  "name": "gizual",
  "version": "3.0.0",
  "packageManager": "yarn@3.5.0",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "./apps/*",
    "./packages/*",
    "./tools/*"
  ],
  "devDependencies": {
    "concurrently": "^8.0.1",
    "husky": "8.0.3",
    "lint-staged": "13.2.0",
    "prettier": "2.8.6",
    "turbo": "1.8.7",
    "typescript": "5.0.2"
  },
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "yarn prettier:fix",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "prettier:check": "prettier --check \"{**/*,*}.{js,jsx,ts,tsx,md,html,json,yml,yaml,scss,css}\"",
    "prettier:fix": "prettier --loglevel warn --write \"{**/*,*}.{js,jsx,ts,tsx,md,html,json,yml,yaml,scss,css}\"",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,css,yaml,yml,json,html}": "prettier --list-different"
  },
  "engines": {
    "yarn": ">=3.5.0",
    "node": ">=16.0.0"
  }
}
