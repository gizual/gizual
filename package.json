{
  "name": "gizual",
  "version": "3.0.0",
  "packageManager": "yarn@3.5.0",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "./apps/*",
    "./packages/*",
    "./tools/*",
    "./apps/gizual-app/src/*"
  ],
  "devDependencies": {
    "@giz/build-tools": "workspace:*",
    "husky": "8.0.3",
    "lint-staged": "13.2.3",
    "prettier": "3.0.0",
    "prettier-plugin-toml": "0.3.1",
    "turbo": "1.10.9",
    "typescript": "5.0.4"
  },
  "scripts": {
    "dev": "yarn workspace @giz/gizual-app start",
    "dev:old": "turbo run dev --parallel --concurrency 20 --scope gizual-app --include-dependencies",
    "playground": "yarn turbo run dev --scope @giz/wasi-playground-app  --include-dependencies",
    "build": "turbo run build --scope gizual-app --include-dependencies",
    "lint": "turbo run lint",
    "format": "yarn prettier:fix && turbo run format",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "prettier:check": "prettier --check \"{**/*,*}.{mjs,js,jsx,ts,tsx,md,html,json,yml,yaml,scss,css,toml}\"",
    "prettier:fix": "prettier --loglevel warn --write \"{**/*,*}.{mjs,js,jsx,ts,tsx,md,html,json,yml,yaml,scss,css,toml}\"",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{mjs,js,jsx,ts,tsx,md,css,yaml,yml,json,html,toml}": "prettier --list-different",
    "*.rs": "cargo fmt --check --"
  },
  "engines": {
    "yarn": ">=3.5.0",
    "node": ">=16.0.0"
  }
}
